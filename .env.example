# visit https://giscus.app to get your Giscus ids
NEXT_PUBLIC_GISCUS_REPO=
NEXT_PUBLIC_GISCUS_REPOSITORY_ID=
NEXT_PUBLIC_GISCUS_CATEGORY=
NEXT_PUBLIC_GISCUS_CATEGORY_ID=
NEXT_PUBLIC_UTTERANCES_REPO=
NEXT_PUBLIC_DISQUS_SHORTNAME=

# AI Monitoring Configuration
# Set to 'true' to enable the AI monitoring test page (development only)
ENABLE_AI_MONITORING_PAGE=false
# OpenAI API key for AI operations
OPENAI_API_KEY=your-openai-api-key-here

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Cache API Security (Production Only)
# Generate a strong random key for production
CACHE_API_KEY=your-super-secret-cache-api-key-here
# Comma-separated list of allowed IP addresses (optional)
CACHE_ALLOWED_IPS=192.168.1.1,10.0.0.1

MAILCHIMP_API_KEY=
MAILCHIMP_API_SERVER=
MAILCHIMP_AUDIENCE_ID=

BUTTONDOWN_API_KEY=

CONVERTKIT_API_KEY=
# curl https://api.convertkit.com/v3/forms?api_key=<your_public_api_key> to get your form ID
CONVERTKIT_FORM_ID=

KLAVIYO_API_KEY=
KLAVIYO_LIST_ID=

REVUE_API_KEY=

EMAILOCTOPUS_API_KEY=
EMAILOCTOPUS_LIST_ID=

# Sentry Configuration
# Get your DSN from https://sentry.io/
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=

# Sentry Performance & Debug Settings
# All sample rates must be numbers between 0.0 and 1.0
# Invalid values will fallback to defaults with console warnings
NEXT_PUBLIC_SENTRY_DEBUG=false
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.05
NEXT_PUBLIC_SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=1.0
NEXT_PUBLIC_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.1
SENTRY_ENABLE_LOGS=true

# Test page visibility (set to 'false' to hide in production)
NEXT_PUBLIC_ENABLE_SENTRY_TEST_PAGE=false
